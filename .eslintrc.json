{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier"
  ],
  "plugins": [
    "check-file",
    "n"
  ],
  "rules": {
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "prefer-arrow-callback": [
      "error"
    ],
    "prefer-template": [
      "error"
    ],
    "semi": [
      "error"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "n/no-process-env": [
      "error"
    ],
    "check-file/filename-naming-convention": [
      "error",
      {
        "**/*.{ts,tsx}": "KEBAB_CASE"
      },
      {
        "ignoreMiddleExtensions": true
      }
    ],
    "check-file/folder-naming-convention": [
      "error",
      {
        "src/**/!^[.*": "KEBAB_CASE"
      }
    ],
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./src/features/rooms",
            "from": "./src/features",
            "except": [
              "./rooms"
            ]
          }
        ]
      }
    ]
  }
}
